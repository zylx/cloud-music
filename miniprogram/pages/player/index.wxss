.player-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}

.player-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #333;
  z-index: -2;
}

.player-info {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  text-align: center;
}

.player-disc {
  position: absolute;
  width: 592rpx;
  height: 592rpx;
  background: url('https://s3.music.126.net/mobile-new/img/disc.png?d3bdd1080a72129346aa0b4b4964b75f=') no-repeat center/contain;
  left: 50%;
  transform: translate(-50%, 140rpx);
}

.player-disc::after {
  content: '';
  position: absolute;
  width: 192rpx;
  height: 274rpx;
  top: -150rpx;
  left: 266rpx;
  background: url('https://s3.music.126.net/m/s/img/needle.png?702cf6d95f29e2e594f53a3caab50e12') no-repeat center/contain;
  transform: rotate(-20deg);
  transform-origin: 24rpx 10rpx;
  transition: transform 0.8s ease;
}

.play.player-disc::after {
  transform: rotate(0deg);
}

.player-img {
  position: absolute;
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  margin-top: -184rpx;
  margin-left: -184rpx;
}

.control {
  position: absolute;
  width: 80%;
  left: 50%;
  bottom: 10%;
  transform: translateX(-50%);
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  box-sizing: border-box;
}

.control .iconfont {
  color: #efefef;
}

.icon-48shangyishou,
.icon-048caozuo_xiayishou {
  font-size: 80rpx;
}

.icon-bofang,
.icon-zanting {
  /* margin: 0 60rpx; */
  font-size: 100rpx;
}

.rotation {
  animation: rotation 12s linear infinite;
  -moz-animation: rotation 12s linear infinite;
  -webkit-animation: rotation 12s linear infinite;
  -o-animation: rotation 12s linear infinite;
}

.rotation-paused {
  animation-play-state: paused;
}

@keyframes rotation {
  from {
    transform: rotate(0deg);
  }

  to {
    transform: rotate(360deg);
  }
}

.progress-bar {
  width: 90%;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 24%;
}